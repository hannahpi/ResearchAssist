{
  "manifest_version": 2,

  "name": "Research Assist",
  "description": "This extension keeps track of searches and results that you click on.",
  "version": "0.0.1",
  "icons": {"128": "icon.png"},

  "background":
    {
      "persistent": true,
      "scripts":["researchAssist.js"]
    },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "bookmarks",
    "webRequest",
    "*://*/*",
    "https://ajax.googleapis.com/"
  ]
}
